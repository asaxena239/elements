{
  "version": "independent",
  "npmClient": "yarn",
  "registry": "https://registry.npmjs.org/",
  "useWorkspaces": true,
  "packages": ["docs", "packages/*"],
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "changed": {
      "includeMergedTags": true
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    },
    "version": {
      "noPush": true,
      "noPrivate": true,
      "conventialCommits": true,
      "includeMergedTags": true
    }
  },
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "**/node_modules/**",
    "**/package.json",
    "**/*.md",
    "**/*.mdx",
    "**/__tests__/**",
    "**/perf/**",
    "**/*.stories.js",
    "**/dist/**"
  ]
}
