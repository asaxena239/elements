{
  "version": "independent",
  "npmClient": "yarn",
  "registry": "https://registry.npmjs.org/",
  "useWorkspaces": true,
  "packages": ["docs", "packages/*"],
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "**/node_modules/**",
    "**/package.json",
    "**/*.md",
    "**/*.mdx",
    "**/__tests__/**",
    "**/perf/**",
    "**/*.stories.js"
  ]
}
